<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Admin Panel</title>
    <style>
        .content {
            flex: 1 0 auto;
        }
    </style>
</head>

<body>
    <%- include('partials/adminheader.ejs') %>
        <div class="content">
            <div class="container">
                <br>
                <h2>Products from Database</h2>
                <br>

                <table class="table table-hover small text-center">
                    <thead>
                        <tr>
                            <th width="20%">Product Name</th>
                            <th width="15%">Product Image</th>
                            <th width="5%">Quantity</th>
                            <th width="5%">Price</th>
                            <th width="25%">Description</th>
                            <th width="10%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < products.length; i++) { %>
                            <tr>
                                <td><a href="/product/<%= products[i].productId %>">
                                        <%= products[i].productName %>
                                    </a></td>
                                <td><img src="/images/products/<%= products[i].image %>" class="img-fluid"></td>
                                <td>
                                    <%= products[i].quantity %>
                                </td>
                                <td>$<%= products[i].price.toFixed(2) %>
                                </td>
                                <td>
                                    <%= products[i].description %>
                                </td>
                                <td>
                                    <a href="/editProduct/<%= products[i].productId %>"
                                        class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/deleteProduct/<%= products[i].productId %>"
                                        class="btn btn-danger btn-sm ms-1"
                                        onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include('partials/footer.ejs') %>
</body>

</html>