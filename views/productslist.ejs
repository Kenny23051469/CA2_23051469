<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    .product-image {
      width: 100%;
      max-height: 150px;
      object-fit: contain;
      padding: 10px;
      display: block;
      margin: 0 auto;
    }

    .card-link {
      text-decoration: none;
      color: inherit;
    }

    .card-link .card {
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .card-link .card:hover {
      transform: scale(1.01);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .searchButton {
      background-color: #ba4148;
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      margin-top: 20px;
      margin-bottom: 20px;
    }

    .searchButton:hover {
      background-color: #94363a;
    }

    .searchBar {
      padding: 10px 20px;
      border-radius: 5px;
      margin-top: 20px;
      margin-bottom: 20px;
      margin-right: 10px;
      border: none;
    }
  </style>
</head>
<header>
  <nav class="navbar navbar-expand-sm bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/images/store_logo.png" width="75" alt="Store Logo"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/productslist">View Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact Us</a>
          </li>
          <li class="nav-item">
            <span class="nav-link">|</span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
        </ul>
        <form class="d-flex me-3" action="/search" method="get" role="search">
          <input class="searchBar" class="form-control me-2" type="search" name="query" placeholder="Search" aria-label="Search" value="<%= searchQuery %>">
          <button class="searchButton" class="btn" type="submit" >Search</button>
        </form>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/cart">
              <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/cart-fill.svg" alt="Cart" width="24"
                height="24">
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<body>

  <div class="container">
    <br>
    <div class="text-center">
      <h2>Kyo's Products</h2>
    </div>
    <br>

    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col">
          <a href="/product/<%= products[i].productId %>" class="card-link">
            <div class="card h-100">
              <img src="/images/products/<%= products[i].image %>" class="product-image">
              <div class="card-body">
                <h5 class="card-title">
                  <%= products[i].productName %>
                </h5>
                <p class="card-text">
                  SGD $<%= products[i].price.toFixed(2) %>
                </p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>
    </tbody>
    </table>
  </div>

  <br>
  <%- include('partials/footer.ejs') %>
</body>

</html>